{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "0.0.0",
  "command": {
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock"
      ]
    },
    "publish": {
      "message": "chore(release): publish",
      "registry": "http://registry.npmjs.org"
    }
  },
  "npmClientArgs": [
    "--no-lockfile"
  ]
}
